<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo" />

        <!-- Header Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_form_heading"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#2C3148"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_form_second"
            android:textAlignment="center"
            android:textColor="#2C3148"
            android:layout_marginBottom="24dp" />

        <!-- Full Name -->
        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/hint_1"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittext"
            android:textColor="#333333"
            android:textSize="16sp"
            android:padding="15dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/hint_2"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext"
            android:textColor="#333333"
            android:textSize="16sp"
            android:padding="15dp" />

        <!-- Password -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/hint_3"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edittext"
            android:textColor="#333333"
            android:textSize="15sp"
            android:padding="20dp" />

        <!-- Confirm Password -->
        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/hint_4"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edittext"
            android:textColor="#333333"
            android:textSize="16sp"
            android:padding="15dp" />
        <!-- Already Account -->
        <TextView
            android:id="@+id/alreadyAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/condition"
            android:textColor="#3DB1E4"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <!-- Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="@string/register_btn"
            android:backgroundTint="#3DB1E4"
            android:textColor="#2C3148"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
    </LinearLayout>
</ScrollView>
