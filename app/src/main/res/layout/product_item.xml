<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textColor="#2C3148"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/product_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textColor="#777777"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#777777"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#3DB1E4"
            android:textColor="#2C3148"/>

        <Button
            android:id="@+id/exchange_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exchange"
            android:backgroundTint="#3DB1E4"
            android:textColor="#2C3148"/>
    </LinearLayout>

    <!-- Section for Exchange Product Details -->
    <TextView
        android:id="@+id/exchange_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exchange Details:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/exchange_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exchange Product Name"
        android:textColor="#555555"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/exchange_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exchange Product Description"
        android:textColor="#555555"
        android:textSize="14sp"
        android:visibility="gone" />
</LinearLayout>
