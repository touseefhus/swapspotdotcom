<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Exchange Product Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/exchangeProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Exchange Product Name"
        android:inputType="text"
        android:padding="15dp" />

    <EditText
        android:id="@+id/exchangeProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Exchange Product Description"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/dialogSubmitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3DB1E4"
        android:textColor="#ffffff" />
</LinearLayout>
