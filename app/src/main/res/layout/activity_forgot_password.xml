<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/logo" />

        <!-- Header Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forget_password"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#2C3148"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password_text"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:textSize="14sp"
            android:textColor="#2C3148" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/forgotPasswordEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/forgot_password_input"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edittext"
            android:textColor="#333333"
            android:textSize="16sp"
            android:padding="15dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitForgotPasswordButton"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password_btn"
            android:backgroundTint="#3DB1E4"
            android:textColor="#2C3148"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
    </LinearLayout>
</ScrollView>
