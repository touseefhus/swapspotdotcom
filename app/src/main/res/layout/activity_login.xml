<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo" />

        <!-- Header Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_form_heading"
            android:textColor="#2C3148"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_form_slogan"
            android:textAlignment="center"
            android:textColor="#2C3148"
            android:layout_marginBottom="24dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/hint_2"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext"
            android:textColor="#333333"
            android:textSize="16sp"
            android:padding="15dp" />

        <!-- Password -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/hint_3"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edittext"
            android:textColor="#333333"
            android:textSize="16sp"
            android:padding="15dp" />

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/forgotPasswordLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forget_password"
            android:textColor="#3DB1E4"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:layout_gravity="end" />

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="@string/Login_btn"
            android:backgroundTint="#3DB1E4"
            android:textColor="#2C3148"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
    </LinearLayout>
</ScrollView>
